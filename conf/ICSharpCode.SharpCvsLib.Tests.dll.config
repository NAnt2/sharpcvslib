<?xml version="1.0" encoding="utf-8" ?> 
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
        <section name="sharpcvslib" type="ICSharpCode.SharpCvsLib.Config.SharpCvsLibConfigHandler, ICSharpCode.SharpCvsLib"/>
        <section name="sharpcvslib-tests" type="ICSharpCode.SharpCvsLib.Tests.Config.SharpCvsLibTestsConfigHandler, ICSharpCode.SharpCvsLib.Tests"/>
    </configSections>       
    <log4net debug="false">
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="%d [%-5p] (%c{1}:%L) [%x] - %m%n" />
            </layout>
        </appender>
        <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="cvs-tests.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="1000000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="%d [%-5p] (%c{1}:%L) [%x] - %m%n" />
            </layout>
        </appender>
        <appender name="Request" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="in.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="1000000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="[client]: %m%n" />
            </layout>
        </appender>
        <appender name="Response" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="out.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="1000000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="[server]: %m%n" />
            </layout>
        </appender>
        <root>
            <level value="DEBUG" />
            <appender-ref ref="RollingLogFileAppender" />
            <appender-ref ref="ConsoleAppender" />
        </root>
        <logger name="ICSharpCode.SharpCvsLib.Logs.ResponseLog">
            <level value="DEBUG" />
            <appender-ref ref="Response" />
        </logger>
        <logger name="ICSharpCode.SharpCvsLib.Logs.RequestLog">
            <level value="DEBUG" />
            <appender-ref ref="Request" />
        </logger>
    </log4net>
    <sharpcvslib type="ICSharpCode.SharpCvsLib.Config.SharpCvsLibConfig, ICSharpCode.SharpCvsLib.Tests">
        <sharpcvslib-config>
            <timeout>1000</timeout>
            <auth-sleep>1000</auth-sleep>
            <logging>
                <debug-log>
                    <enabled>true</enabled>
                    <request-file>in.txt</request-file>
                    <response-file>out.txt</response-file>
                </debug-log>
            </logging>
        </sharpcvslib-config>
    </sharpcvslib>
    <sharpcvslib-tests type="ICSharpCode.SharpCvsLib.Tests.Config.SharpCvsLibTestsConfig, ICSharpCode.SharpCvsLib.Tests">
        <sharpcvslib-tests-config>
            <cvsroot>:pserver:claytonharbour@goliath.sporadicism.com:/cvsroot/claytonharbour</cvsroot>
            <module>sharpcvslib-test-repository</module>
            <valid-password>William</valid-password>
            <invalid-password>I_HATE_YOU_TOO</invalid-password>
            <target-file>test-file.txt</target-file>
            <target-directory>src</target-directory>
            <tag1>V0_1</tag1>
            <tag2>V0_2</tag2>
            <override-directory>override_root</override-directory>
        </sharpcvslib-tests-config>
    </sharpcvslib-tests>
</configuration>
