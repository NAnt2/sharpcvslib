<?xml version="1.0" encoding="utf-8" ?> 
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net-net-1.0"/>
        <section name="sharpcvslib" type="ICSharpCode.SharpCvsLib.Config.SharpCvsLibConfigHandler, ICSharpCode.SharpCvsLib.Tests"/>
        <section name="sharpcvslib-tests" type="ICSharpCode.SharpCvsLib.Config.Tests.SharpCvsLibTestsConfigHandler, ICSharpCode.SharpCvsLib.Tests"/>
    </configSections>       
    <log4net debug="false">
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <param name="ConversionPattern" value="[%c{2}:%m  - [%x] &lt;%X{auth}&gt;]%n" />
            </layout>
        </appender>
        <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="cvs-tests.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="100000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <param name="Header" value="[Header]\r\n" />
                <param name="Footer" value="[Footer]\r\n" />
                <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />
            </layout>
        </appender>
        <appender name="Request" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="out.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="100000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
<!--                <param name="Header" value="[Header]\r\n" />
                <param name="Footer" value="[Footer]\r\n" />
                <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />-->
                <param name="ConversionPattern" value="%m%n" />
            </layout>
        </appender>
        <appender name="Response" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="in.log" />
            <param name="AppendToFile" value="true" />
            <param name="MaxSizeRollBackups" value="10" />
            <param name="MaximumFileSize" value="100000" />
            <param name="RollingStyle" value="Size" />
            <param name="StaticLogFileName" value="true" />
            <layout type="log4net.Layout.PatternLayout">
<!--                <param name="Header" value="[Header]\r\n" />
                <param name="Footer" value="[Footer]\r\n" />
                <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />-->
            </layout>
        </appender>
        <root>
            <level value="DEBUG" />
            <appender-ref ref="RollingLogFileAppender" />
            <appender-ref ref="ConsoleAppender" />
        </root>
        <logger name="ICSharpCode.SharpCvsLib.Logs.ResponseLog">
            <level value="DEBUG" />
            <appender-ref ref="Response" />
        </logger>
        <logger name="ICSharpCode.SharpCvsLib.Logs.RequestLog">
            <level value="DEBUG" />
            <appender-ref ref="Request" />
        </logger>
    </log4net>
    <sharpcvslib type="ICSharpCode.SharpCvsLib.Config.SharpCvsLibConfig, ICSharpCode.SharpCvsLib.Tests">
        <sharpcvslib-config>
            <timeout>1000</timeout>
            <auth-sleep>1000</auth-sleep>
            <logging>
                <debug-log>
                    <enabled>true</enabled>
                    <request-file>out.txt</request-file>
                    <response-file>in.txt</response-file>
                </debug-log>
            </logging>
        </sharpcvslib-config>
    </sharpcvslib>
    <sharpcvslib-tests type="ICSharpCode.SharpCvsLib.Config.Tests.SharpCvsLibTestsConfig, ICSharpCode.SharpCvsLib.Tests">
        <sharpcvslib-tests-config>
            <cvsroot>:pserver:anonymous@goliath.sporadicism.com:/cvsroot/sharpcvslib-test</cvsroot>
            <module>sharpcvslib-test-repository</module>
            <valid-password></valid-password>
            <invalid-password>I_HATE_YOU_TOO</invalid-password>
            <target-file>test-file.txt</target-file>
            <target-directory>src</target-directory>
            <tag1>V0_1</tag1>
            <tag2>V0_2</tag2>
            <override-directory>override_root</override-directory>
        </sharpcvslib-tests-config>
    </sharpcvslib-tests>
</configuration>
