<!--
    Build test classes for library and other apps.
-->
<project name="ICSharpCode.SharpCvsLib" default="build">
    <target name="build">
        <csc    target="library" 
                warnaserror="${compile.warnaserror}" 
                output="${dir.build}/${name.top-level}.${name.project}.${name.tests}.dll" 
                debug="${compile.debug}" 
                define="${compile.define}">                
            <arg value="${compile.unsafe}" />
            <arg value="${compile.checked}" />
            <sources>
                <includes name="**/*.cs" />
                <includes name="../../${name.top-level}/${name.project}/**.cs" />
                <includes name="../../${name.top-level}.${name.console}/${name.project}/**.cs" />
                <excludes name="../../${name.top-level}/${name.project}/AssemblyInfo.cs" />
                <excludes name="../../${name.top-level}.${name.console}/${name.project}/AssemblyInfo.cs" />
            </sources>

            <references>
                <includes name="System.dll" />            
                <includes name="${dir.lib}/${lib.zip}" />
                <includes name="${dir.lib.ext}/${lib.log4net}" />
                <includes name="${dir.lib.ext}/${lib.nunit}" />
            </references>
        </csc>
    </target>
    <target name="build-sample">
        <csc    target="library" 
                warnaserror="${compile.warnaserror}" 
                output="${dir.build}/${name.top-level}.${name.project}.${name.tests}-sample.dll" 
                debug="${compile.debug}" 
                define="${compile.define}">
                
            <arg value="${compile.unsafe}" />
            <arg value="${compile.checked}" />
            <sources>
                <includes name="**/*.cs" />
                <includes name="../../${name.top-level}/${name.project}/**.cs" />
                <includes name="../../${name.top-level}.${name.console}/${name.project}/**.cs" />
                <excludes name="../../${name.top-level}/${name.project}/AssemblyInfo.cs" />
                <excludes name="../../${name.top-level}.${name.console}/${name.project}/AssemblyInfo.cs" />
                <excludes name="Commands/*.cs" />
                <excludes name="Console/Commands/*.cs"/>
                <excludes name="FileHandler/*.cs" />
            </sources>

            <references>
                <includes name="System.dll" />            
                <includes name="${dir.lib}/${lib.zip}" />
                <includes name="${dir.lib.ext}/${lib.log4net}" />
                <includes name="${dir.lib.ext}/${lib.nunit}" />
            </references>
        </csc>
    </target>
    <target name="run-tests">
        <echo message="Results output directory: ${dir.build}/results" />
        <mkdir dir="${dir.build}/tests" />
        <nunit2>
            <formatter type="Xml" usefile="true" extension=".xml" outputdir="${dir.build}/tests" />
            <test assemblyname="${dir.build}/${name.top-level}.${name.project}.${name.tests}.dll" 
                  appconfig="ICSharpCode.SharpCvsLib.Tests.dll.config"/>
        </nunit2>
    </target>
    <target name="run-tests-sample" depends="build-sample" failonerror="false">
        <echo message="Results output directory: ${dir.build}/tests" />
        <mkdir dir="${dir.build}/tests" />
        <nunit2>
            <formatter type="Xml" usefile="true" extension=".xml" outputdir="${dir.build}/tests" />
            <test assemblyname="${dir.build}/${name.top-level}.${name.project}.${name.tests}-sample.dll" 
                  appconfig="ICSharpCode.SharpCvsLib.Tests-sample.dll.config"/>
        </nunit2>
    </target>
    <target name="tests-to-html" failonerror="false">
        <nunit2report out="${dir.build}/tests/index.html" >
            <fileset>
                <includes name="${dir.build}/tests/${name.top-level}.${name.project}.${name.tests}-sample.dll-results.xml" />
            </fileset>
        </nunit2report>
    </target>
</project>